+                    this@LoginActivity.verificationId = verificationId
+                    Toast.makeText(this@LoginActivity, "OTP sent to mobile!", Toast.LENGTH_SHORT).show()
+                }
+            })
+            .build()
+
+        PhoneAuthProvider.verifyPhoneNumber(options)
+    }
